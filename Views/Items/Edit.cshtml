@model Item

<h2>Edit Item</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="InventoryId" />
    <div class="form-group">
        <label asp-for="CustomId"></label>
        <input asp-for="CustomId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="FieldData"></label>
        <textarea asp-for="FieldData" class="form-control"></textarea>
        <span asp-validation-for="FieldData" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<div>
    <a asp-action="Details" asp-controller="Inventories" asp-route-id="@Model.InventoryId">Back to Inventory</a>
</div>
